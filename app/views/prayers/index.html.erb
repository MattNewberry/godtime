<h1>Listing prayers</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Created by</th>
      <th>Created for</th>
      <th>title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prayers.each do |prayer| %>
    <tr>
      <td><%= prayer.text %></td>
      <td><%= prayer.created_by.name %></td>
      <td><%= prayer.created_for.name %></td>
      <td><%= prayer.title %></td>
      <td><%= link_to 'Show', prayer %></td>
      <td><%= link_to 'Edit', edit_prayer_path(prayer) %></td>
      <td><%= link_to 'Destroy', prayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

